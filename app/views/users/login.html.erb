
<% if flash[:danger] %>
  <div class="notice"><%= flash[:danger] %></div>
<% end %>

<%= form_tag '/login', method: :post, id: "login-form" do %>
  <p>
    <%= label_tag :username %><br>
    <%= text_field_tag :username %>
  </p>

  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag "Login" %>
  </p>

<% end %>
